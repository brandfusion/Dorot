			tECo2ER = parseFloat(tECo2ER);
			event.preventDefault();
			if (totalEmissions != "" && tECo2ER != "" ) {
				var totalEmissionsSavings = totalEmissions + tECo2ER ;
				totalEmissionsSavings = totalEmissionsSavings.toFixed(1);
