	$("#pOWU,#aUWWPE,#aDF,#nOEPY").change(
		function(event) {
			var pOWU = $("#pOWU").val();
			var aUWWPE = $("#aUWWPE").val();
			var aDF = $("#aDF").val();
			aDF = parseFloat(aDF);
			var nOEPY = $("#nOEPY").val();
			event.preventDefault();
			if (pOWU != "" && aUWWPE != "" && aDF != "" && nOEPY != "" ) {
