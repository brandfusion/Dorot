<!DOCTYPE html>
<html>
<head>	
	<title>@GetValue("Title")</title>
@GetValue("MetaTags")
@GetValue("CopyRightNotice")


	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width">

	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

	<!--[if lt IE 9]>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv-printshiv.min.js"></script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
	<![endif]-->
      
    @{
		    
	string areaLayoutPath = "/Files/Templates/Designs/Dorot/";		
	areaLayoutPath = areaLayoutPath.Substring(0, areaLayoutPath.LastIndexOf("/"));

}	

	<link rel="stylesheet" type="text/css" href="@areaLayoutPath/assets/css/main.css">
	<link rel="stylesheet" type="text/css" href="@areaLayoutPath/assets/css/fix.css">
	@if(!string.IsNullOrEmpty(GetString("Item.Area.CustomCssURL"))){
     <link rel="stylesheet" type="text/css" href='@areaLayoutPath/assets/css/@GetString("Item.Area.CustomCssURL")'> 
    }
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>	
	@GetValue("Stylesheets")
@GetValue("Javascripts")
</head>
	<body>
	<style>
      .embed-container { 
      position: relative; 
      padding-bottom: 56.25%; 
      height: 0; 
      overflow: hidden; 
      max-width: 100%; 
      } 
      
      .embed-container iframe, .embed-container object, .embed-container embed { 
      position: absolute; 
      top: 0; 
      left: 0; 
      width: 100%; 
      height: 100%; 
      }
      </style>
      <div class="container-fluid">
            <div class="row">
                <div class="col-md-12" id="maincontent">@GetValue("DwContent(maincontent)")</div>
      		</div>
      </div>
	</body>
</html>