@Include("../../Custom/GlobalVariables.cshtml")

<div>

  @if(GetBoolean("ItemPublisher:Items.Any")){
  	foreach(LoopItem item in GetLoop("ItemPublisher:Items.List")){
  	
    string itemTitle = item.GetString("ItemPublisher:Item.Title");
  	string itemCity = item.GetString("ItemPublisher:Item.City.Value");
  	string itemCountry = item.GetString("ItemPublisher:Item.Country.Value");
    string itemLink = item.GetString("ItemPublisher:Item.Url");

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 studies-box">
      <div class="panel panel-default">
        <div class="panel-body">
            <h4 class="panel-title case-studies">@itemTitle</h4>
            @itemCity / @itemCountry
        </div>
        <div class="panel-body">
            <a class="btn btn-primary" href="@itemLink">@Translate("Read more")</a>
        </div>
      </div>
    </div>
      }
  }
</div>
